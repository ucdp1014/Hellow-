<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--映射配置文件：配置statement对象-->
<mapper namespace="com.guigu.dao.SetmealDao">
    <!--插入数据-->
    <!--插入检查组数据-->
    <insert id="addSetmeal" parameterType="com.health.pojo.Setmeal">
        <!--通过mybatis框架提供的selectKey标签获得自增产生的ID值-->
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            select LAST_INSERT_ID()
        </selectKey>
        insert into t_setmeal(code,name,sex,helpCode,remark,attention,age,price,img)
        values
        (#{code},#{name},#{sex},#{helpCode},#{remark},#{attention},#{age},#{price},#{img})
    </insert>
    <!--插入检查组和检查项的关联关系-->
    <insert id="setSetmealIdAndCheckGroupId" parameterType="map">
        insert into t_setmeal_checkgroup(setmeal_id,checkgroup_id)
        values
        (#{setmealId},#{checkgroupId})
    </insert>
    <!--分页查询、条件查询-->
    <select id="selectByCondition" parameterType="String" resultType="com.health.pojo.Setmeal">
        select * from t_setmeal
        <if test="value != null and value.length>0">
            where code = #{value} or name = #{value} or helpCode = #{value}
        </if>
    </select>
    <!--查询所有套餐-->
    <select id="findAll" resultType="com.health.pojo.Setmeal">
         select * from t_setmeal
    </select>
    <!--根据id查询套餐-->
    <resultMap id="BaseMap" type="com.health.pojo.Setmeal">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="helpCode" property="helpCode"/>
        <result column="sex" property="sex"/>
        <result column="age" property="age"/>
        <result column="price" property="price"/>
        <result column="remark" property="remark"/>
        <result column="attention" property="attention"/>
        <result column="img" property="img"/>
    </resultMap>
    <resultMap id="findByIdResultMap" type="com.health.pojo.Setmeal" extends="BaseMap">
        <collection
                property="checkGroups"
                ofType="com.health.pojo.CheckGroup"
                select="com.guigu.dao.CheckGroupDao.findCheckGroupById"
                column="id">
        </collection>
    </resultMap>
    <select id="findById" parameterType="int" resultMap="findByIdResultMap">
        select * from t_setmeal where id=#{id}
    </select>
    <!--查询套餐预约占比-->
    <select id="findSetmealCount" resultType="map">
        select s.name, count(o.id) value from t_order o,t_setmeal s where o.setmeal_id = s.id group by s.name
    </select>
    <!--根据套餐Id查询检查组id-->
    <select id="findCheckGroupIdsBySetMealId" parameterType="String" resultType="String">
        SELECT checkgroup_id FROM t_setmeal_checkgroup WHERE setmeal_id = #{setMealId}
    </select>
    <!--修改套餐-->
    <update id="editSetmeal" parameterType="com.health.pojo.Setmeal">
        update t_setmeal set
        code=#{code},
        name=#{name},
        sex=#{sex},
        helpCode=#{helpCode},
        remark=#{remark},
        attention=#{attention},
        age=#{age},
        price=#{price},
        img=#{img}
        where id=#{id}
    </update>
    <!--根据SetmealId删除关联关系-->
    <delete id="deleteSetmealAndCheckgroup" parameterType="int">
        DELETE FROM t_setmeal_checkgroup WHERE setmeal_id=#{setmealId}
    </delete>
    <!--根据Id删除套餐-->
    <delete id="deleteSetmealById" parameterType="int">
        delete from t_setmeal where id=#{setMealId}
    </delete>
    <!--查询所有套餐，用于预约添加回显-->
    <select id="findAllSetmeal" resultType="com.health.pojo.Setmeal">
        select * from t_setmeal
    </select>
    <select id="findSetmealNameById" parameterType="int" resultType="String">
        select name from t_setmeal where id=#{id}
    </select>   
</mapper>